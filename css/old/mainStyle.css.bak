html {
    font-family: "lucida console","arial","verdana";
}
body {
    font-size: 18px;
    font-family: "lucida console","arial","verdana";
    overflow: auto;
    width: 98%;
}
#callout {
    height: auto;
    overflow: hidden;
    text-align: right;
    background: #676767;
    color: lemonchiffon;
    font-weight: bold;
    font-size: 18px;
    border: 2px solid #676767;
    border-radius: 2px;
}
header {
    background: #F1F1D4;
    border: 2px solid #676767;
    border-radius: 2px;
    min-height: 90px;
    padding: 5px;
    overflow: hidden;
}
header img {
    text-align: center;
    max-width: 98%;
    height: auto;
    width: auto;
}
header nav ul {
    list-style: none;
    max-width: 90%
}
header nav ul li {
    float: left;
    border: 1px solid #676767;
    width: 33%;
}
header nav ul li a {
    background: #F1F1D4;
    color: #035D66;
    display: block;
    padding: 5% 10%;
    font-weight: bold;
    font-size: 18px;
    text-decoration: none;
    text-align: center;
    overflow: hidden;
}
header nav ul li a:hover, nav ul li.active a{
    background: #C0D8E9;
    color: #000000;
    font-weight: bold;
    text-decoration: underline;
}
#pagewrap {
    font-family: "lucida console","arial","verdana";
    width: 98%;
    font-size: 18px;
	margin: 2px 2px;
}
#left {
	width: 20%;
	float: left;
    background:#C0D8E9;
    border: 2px solid #676767;
    border-radius: 2px;
    box-shadow: 0 0 10px 0px #111111;
    overflow: hidden;
}
#left .inner {
    color: #000000;
    font-weight: bold;
    padding-left: 2px;
    padding-right: 2px;
}
#center {
    background: #F1F1D4;
	width: 58%; /* Account for margins + border values */
	float: left;
    border: 2px solid #676767;
    border-radius: 2px;
    box-shadow: 0 0 10px 0px #111111;
    overflow: hidden;
}
#center .inner ul {
    list-style: none;
}

#center .inner ul li h1 {
    color: #000000;
    border-bottom: 2px solid #000000;
    border-bottom-width: 58%;
    font-family: "verdana","times new roman","lucida console";
    font-weight: bold;
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 0;
    padding-bottom: 0;
    margin-top: 0;
    margin-bottom: 0;
    float: left;
}
#center .inner ul li p {
    color: #676767;
    font-size: 13px;
    font-family: "verdana","times new roman","lucida console";
    font-weight: bold;
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 0px;
    float: right;
}

#right {
    background:#C0D8E9;
    width: 21%;
    float: left;
    border: 2px solid #676767;
    border-radius: 2px;
    box-shadow: 0 0 10px 0px #111111;
    overflow: hidden;
}
#right .inner {
    color: #000000;
    font-weight: bold;
}
#center, #right, #left {
    transition-duration: 0.2s;
    -webkit-transition-duration: 0.2s;
}

#center.slideAway {
    width: 98%
}
#right.slideAway, #left.slideAway {
    width: 0;
}
#postContent {
    color: #000000;
    font-family: "lucida console","verdana","times new roman","arial";
    font-size: 13px;
    padding-left: 2px;
    padding-right: 58%;
}
#postContent:after {
    content: '\a';
}
footer {
    overflow: hidden;
    width: 98%;
    background: #C0D8E9;
}
footer img {
    height: 50px;
}
footer p {
    color: #000000;
}
footer p a {
    color: #000000;
    text-decoration: none;
}
footer ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
}
footer ul li {
    display: inline;
}
footer ul li img {
    height: 50px;
}

/*---------------------- MEDIA --------------------*/
@media screen and (max-width: 478px) {
    body {
        font-size: 13px;
    }
}
@media screen and (max-width: 740px) {
    header nav {
        width: 98%;
        margin-bottom: 10px;
    }
    header nav ul {
        list-style: none;
        margin: 0 auto;
        padding-left: 0;
    }
    header nav ul li {
        text-align: center;
        margin-left: 0 auto;
        width: 98%;
        border-top: 1px solid #676767;
        border-bottom: 1px solid #676767;
        border-left: 0px solid #676767;
        border-right: 0px solid #676767;
    }
    header nav ul li a {
        padding: 8px 0;
        font-size: 16px;
    }
}
}
